@model OTDStore.ViewModels.Sales.OrderVM

@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <h1 class="h3 mb-2 text-gray-800">Thông tin chi tiết</h1>
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <a class="btn btn-success" asp-action="Index" asp-controller="Order">Về danh sách</a>
        </div>
        <div class="card-body">
            <div class="col-md-4">
                <dl class="row">
                    <dt class="col-sm-6">
                        @Html.DisplayNameFor(model => model.Id)
                    </dt>
                    <dd class="col-sm-6">
                        @Html.DisplayFor(model => model.Id)
                    </dd>
                    <dt class="col-sm-6">
                        @Html.DisplayNameFor(model => model.OrderDate)
                    </dt>
                    <dd class="col-sm-6">
                        @Html.DisplayFor(model => model.OrderDate)
                    </dd>
                    <dt class="col-sm-6">
                        @Html.DisplayNameFor(model => model.ShipName)
                    </dt>
                    <dd class="col-sm-6">
                        @Html.DisplayFor(model => model.ShipName)
                    </dd>
                    <dt class="col-sm-6">
                        @Html.DisplayNameFor(model => model.ShipAddress)
                    </dt>
                    <dd class="col-sm-6">
                        @Html.DisplayFor(model => model.ShipAddress)
                    </dd>
                    <dt class="col-sm-6">
                        @Html.DisplayNameFor(model => model.ShipEmail)
                    </dt>
                    <dd class="col-sm-6">
                        @Html.DisplayFor(model => model.ShipEmail)
                    </dd>
                    <dt class="col-sm-6">
                        @Html.DisplayNameFor(model => model.ShipPhoneNumber)
                    </dt>
                    <dd class="col-sm-6">
                        @Html.DisplayFor(model => model.ShipPhoneNumber)
                    </dd>
                    <dt class="col-sm-6">
                        @Html.DisplayNameFor(model => model.Total)
                    </dt>
                    <dd class="col-sm-6">
                        @Html.DisplayFor(model => model.Total)
                    </dd>
                    <dt class="col-sm-6">
                        @Html.DisplayNameFor(model => model.PaymentMethod)
                    </dt>
                    <dd class="col-sm-6">
                        @Html.DisplayFor(model => model.PaymentMethod)
                    </dd>
                    <dt class="col-sm-6">
                        @Html.DisplayNameFor(model => model.Status)
                    </dt>
                    <dd class="col-sm-6">
                        @Html.DisplayFor(model => model.Status)
                    </dd>
                    <table>
                        <thead>
                            <tr>
                                <th>Tên</th>
                                <th>Thông số</th>
                                <th>Số lượng</th>
                                <th>Giá</th>
                            </tr>   
                        </thead>
                        <tbody>
                            @foreach (var item in Model.OrderDetails)
                            {
                            <tr>
                                <th>@item.Name</th>
                                <th>@item.Color/@item.Memory/@item.RAM</th>
                                <th>@item.Quantity</th>
                                <th>@item.Price</th>
                            </tr>
                            }
                        </tbody>
                    </table>
                </dl>
            </div>
        </div>
    </div>
</div>
