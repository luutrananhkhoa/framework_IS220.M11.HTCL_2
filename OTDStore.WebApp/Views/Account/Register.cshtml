@model OTDStore.ViewModels.System.Users.RegisterRequest
@{
    ViewData["Title"] = "Đăng kí";
    Layout = "~/Views/Account/Shared/_Layout.cshtml";
}

<div class="app">
    <div class="login">
        <div class="login-box">
            <div class="login-col-1">
                <a href="./index.html">
                    <h1>OTD Store</h1>
                </a>
                <p>Xin chào quý khách.</p>
                <img src="/theme/assets/logoOTDstr-01.png" alt="">
            </div>
            <div class="login-col-2">
                <form asp-action="Register" asp-controller="Account" method="post" class="login-div">
                    <h1 class="register-name">Đăng Ký</h1>
                    <div asp-validation-summary="All" class="text-danger"></div>

                    <label asp-for="LastName" class="login-label"></label>
                    <input type="text" asp-for="LastName" placeholder="Họ" class="login-input">
                    <span asp-validation-for="LastName" class="text-danger"></span>

                    <label asp-for="FirstName" class="login-label"></label>
                    <input type="text" asp-for="FirstName" placeholder="Tên" class="login-input">
                    <span asp-validation-for="FirstName" class="text-danger"></span>

                    <label asp-for="Dob" class="login-label"></label>
                    <input type="date" asp-for="Dob" placeholder="Họ" class="login-input">
                    <span asp-validation-for="Dob" class="text-danger"></span>

                    <label asp-for="Email" class="login-label"></label>
                    <input type="text" asp-for="Email" placeholder="Email" class="login-input">
                    <span asp-validation-for="Email" class="text-danger"></span>

                    <label asp-for="PhoneNumber" class="login-label"></label>
                    <input type="text" asp-for="PhoneNumber" placeholder="Số điện thoại" class="login-input">
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>

                    <label asp-for="UserName" class="login-label"></label>
                    <input type="text" asp-for="UserName" placeholder="Tài khoản" class="login-input">
                    <span asp-validation-for="UserName" class="text-danger"></span>

                    <label asp-for="Password" class="login-label"></label>
                    <input type="password" asp-for="Password" placeholder="Mật khẩu" class="login-input">
                    <span asp-validation-for="Password" class="text-danger"></span>

                    <label asp-for="ConfirmPassword" class="login-label"></label>
                    <input type="password" asp-for="ConfirmPassword" placeholder="Xác nhận mật khẩu" class="login-input">
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

                    <button type="submit" value="Register" class="login-btn">Đăng Ký</button>
                </form>
            </div>
        </div>
    </div>
</div>