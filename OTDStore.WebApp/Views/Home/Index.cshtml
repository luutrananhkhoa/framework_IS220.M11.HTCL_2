@model HomeViewModel
@{ ViewData["Title"] = "Home Page"; }

@section slider
{
    <div class="slider">
        <div class="slide">
           @for (int index = 0; index < Model.Slides.Count; index++)
            {
                var slide = Model.Slides[index];
                <input type="radio" name="" id="radio1">
                <input type="radio" name="" id="radio2">
               @if (index == 0)
                {
                    <div class="slide__img firts-lide">
                        <a><img src="@slide.Image" alt="@slide.Name" class="img__promotion"></a>
                    </div>
                }
                else
                {
                    <div class="slide__img">
                        <a><img src="@slide.Image" alt="@slide.Name" class="img__promotion"></a>
                    </div>
                }
             }
            <div class="slide-auto">
                <div class="auto-1"></div>
                <div class="auto-2"></div>
            </div>
            </div>
        </div>
    </div>
}
