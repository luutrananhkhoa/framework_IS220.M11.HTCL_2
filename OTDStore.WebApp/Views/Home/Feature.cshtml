@await Component.InvokeAsync("Filter")
<div class="container">
    @for (int index = 0; index < Model.Products.Count; index++)
    {
        var item = Model.Products[index];
        <div class="product-item">
            <a href="./product-detail.html">
                <img class="product-item-img" src="@item.ThumbnailImage" alt="">
                <p class="product-item-name">@item.Name</p>
                <p class="product-item-promotion">@item.OriginalPrice</p>
                <p class="product-item-price">@item.Price</p>
                @if (item.Stock > 0)
                {
                    <p class="product-item-status">Sẵn sàng</p>
                }
                else
                {
                    <p class="product-item-status">Hết hàng</p>
                }
            </a>
        </div>
    }
</div>
